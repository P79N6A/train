<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="7dp">

    <android.support.v7.widget.CardView
        android:layout_width="126dp"
        android:layout_height="79dp"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center_vertical"
        >
        <com.github.customview.MyImageView
            android:id="@+id/home_read_piv_iv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
    </android.support.v7.widget.CardView>
         <RelativeLayout
                 android:layout_gravity="center_vertical"   
             android:layout_width="match_parent"
             android:layout_marginLeft="6dp"
             android:layout_height="79dp">

             <TextView

                 android:layout_alignParentTop="true"
                 fontPath="fonts/SourceHanSansCN-Medium.ttf"
                 android:id="@+id/home_tv_title1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:ellipsize="end"
                 android:singleLine="true"
                 android:lineSpacingMultiplier="0.9"
                 android:includeFontPadding="false"
                 android:text="从你的世界路过"
                 android:paddingTop="9dp"
                 android:textColor="@color/black"
                 android:textSize="13sp"
                 tools:ignore="MissingPrefix" />

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_alignParentBottom="true"
                 android:layout_marginBottom="9dp"
                 android:layout_height="wrap_content">
                 <ImageView
                     android:id="@+id/iv_video"
                     android:layout_width="wrap_content"
                     android:layout_height="8dp"
                     android:layout_centerInParent="true"
                     android:layout_alignParentLeft="true"
                     android:background="@drawable/home_rv_video"/>
                 <TextView
                     fontPath="fonts/SourceHanSansCN-Regular.ttf"
                     android:id="@+id/tv_video_num"
                     android:layout_toRightOf="@id/iv_video"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="9sp"
                     android:text="9548"
                     android:lineSpacingMultiplier="0.9"
                     android:includeFontPadding="false"
                     android:layout_marginLeft="1dp"
                     android:textColor="#949494"
                     tools:ignore="MissingPrefix" />

                 <TextView
                     fontPath="fonts/SourceHanSansCN-Regular.ttf"
                     android:layout_toRightOf="@id/tv_video_num"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="9sp"
                     android:text="12:08"
                     android:lineSpacingMultiplier="0.9"
                     android:includeFontPadding="false"
                     android:layout_marginLeft="5dp"
                     android:textColor="#949494"
                     tools:ignore="MissingPrefix" />
                 <TextView
                     fontPath="fonts/SourceHanSansCN-Regular.ttf"
                     android:layout_alignParentRight="true"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginRight="5dp"
                     android:textSize="9sp"
                     android:text="卡萨"
                     android:lineSpacingMultiplier="0.9"
                     android:includeFontPadding="false"
                     android:layout_marginLeft="5dp"
                     android:textColor="#949494"
                     tools:ignore="MissingPrefix" />

             </RelativeLayout>
         </RelativeLayout>
</LinearLayout>
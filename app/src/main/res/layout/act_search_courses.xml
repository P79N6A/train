                        android:layout_width="84dp"
                        android:layout_height="30dp"
                        android:text="玫瑰精油"
                        android:gravity="center"
                        app:my_tv_solid="#f5f5f5"
                        app:my_tv_corner_radius="3dp"
                        android:layout_marginRight="10dp"
                        /><com.github.customview.MyTextView
                    android:layout_width="84dp"

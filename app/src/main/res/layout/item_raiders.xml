<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="165dp"
    android:id="@+id/ll_item"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="84dp"
        app:cardCornerRadius="5dp"
        >
        <com.github.customview.MyImageView
            android:id="@+id/home_read_piv_iv"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:scaleType="fitXY"/>
    </android.support.v7.widget.CardView>
    <TextView
        fontPath="fonts/SourceHanSansCN-Medium.ttf"
        android:id="@+id/home_tv_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:lineSpacingMultiplier="0.9"
        android:includeFontPadding="false"
        android:text="从你的世界路过"
        android:paddingTop="3dp"
        android:textColor="@color/black"
        android:textSize="13sp"
        tools:ignore="MissingPrefix" />
    <TextView
        fontPath="fonts/SourceHanSansCN-Normal.ttf"
        android:id="@+id/home_tv_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="0.9"
        android:includeFontPadding="false"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#999999"
        android:text="从你的世界路过"
        android:textSize="9sp"
        tools:ignore="MissingPrefix" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/home_rv_video"/>
        <TextView
            fontPath="fonts/SourceHanSansCN-Regular.ttf"
            android:id="@+id/tv_video_num"
            android:layout_toRightOf="@id/iv_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:text="9548"
            android:lineSpacingMultiplier="0.9"
            android:includeFontPadding="false"
            android:layout_marginLeft="1dp"
            android:textColor="#949494"
            tools:ignore="MissingPrefix" />

        <TextView
            fontPath="fonts/SourceHanSansCN-Regular.ttf"
            android:layout_toRightOf="@id/tv_video_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:text="12:08"
            android:lineSpacingMultiplier="0.9"
            android:includeFontPadding="false"
            android:layout_marginLeft="5dp"
            android:textColor="#949494"
            tools:ignore="MissingPrefix" />
        <TextView
            fontPath="fonts/SourceHanSansCN-Regular.ttf"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textSize="9sp"
            android:text="卡萨"
            android:lineSpacingMultiplier="0.9"
            android:includeFontPadding="false"
            android:layout_marginLeft="5dp"
            android:textColor="#949494"
            tools:ignore="MissingPrefix" />

    </RelativeLayout>
</LinearLayout>
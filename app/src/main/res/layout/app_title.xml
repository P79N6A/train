<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <android.support.v7.widget.Toolbar
        android:id="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        app:titleTextColor="@color/gray_66"
        app:layout_collapseMode="pin"
        >
        <TextView
            fontPath="fonts/SourceHanSansCN-Regular.ttf"
            android:id="@id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="title"
            tools:ignore="MissingPrefix" />

        <ImageView
            android:id="@id/app_right_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:maxHeight="?attr/actionBarSize"
            android:paddingRight="20dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@id/app_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="right_title"
            />
        <TextView
            android:id="@+id/app_right_city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="city"
            android:visibility="gone"
            />
    </android.support.v7.widget.Toolbar>
    <View
        android:id="@+id/v_bottom_line"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/c_divider"
        />
</LinearLayout>
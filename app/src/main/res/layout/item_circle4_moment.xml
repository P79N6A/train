<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        fontPath="fonts/SourceHanSansCN-Normal.ttf"
        android:id="@+id/tv_circle_intraduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:maxLines="1"
        android:textStyle="bold"
        android:text="按法律上飞机阿里上飞机哦啊是假发片加发哦是；激发；搜房酱啊房间按房间爱上就发觉是发放 "
        tools:ignore="MissingPrefix" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:orientation="horizontal">
    <TextView
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:id="@+id/tv_topic"
        android:text="撒大大是大大大打死打打死的撒大大是大大大打死打打死的撒大大是大大大打死打打死的撒大大是大大大打死打打死的撒大大是大大大打死打打死的"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:lineSpacingMultiplier="0.9"
        android:includeFontPadding="false"
        fontPath="fonts/SourceHanSansCN-Regular.ttf"
        tools:ignore="MissingPrefix" />
    
    <ImageView
        android:id="@+id/iv_topic"
        android:layout_width="152dp"
        android:layout_height="82dp"
        android:layout_alignParentRight="true"
        />
    </RelativeLayout>
    <View
        android:id="@+id/v_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/c_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/v_bottom_line"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:id="@+id/ll_my_account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/share" />

            <TextView
                android:id="@+id/iv_my_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300"
                android:lineSpacingMultiplier="0.9"
                android:includeFontPadding="false"
                fontPath="fonts/SourceHanSansCN-Medium.ttf"
                android:gravity="center_vertical"
                android:textColor="@color/circle_bottom_color"
                android:textSize="13sp"
                tools:ignore="MissingPrefix" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_my_yangshengdou"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="13dp"
            >
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/praise"
                android:layout_marginRight="3dp"
                />

            <TextView
                android:id="@+id/iv_my_ysd"
                fontPath="fonts/SourceHanSansCN-Medium.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.9"
                android:text="300"
                android:textColor="@color/circle_bottom_color"
                android:textSize="13sp"
                tools:ignore="MissingPrefix" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
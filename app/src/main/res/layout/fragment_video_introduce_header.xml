<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ly_my_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_my_img"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/people" />

        <RelativeLayout
            android:id="@+id/ll_my_info"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="7dp">

            <TextView
                android:id="@+id/tv_my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#1B130F"
                android:textSize="14sp"
                android:lineSpacingMultiplier="0.9"
                android:includeFontPadding="false"
                fontPath="fonts/SourceHanSansCN-Normal.ttf"
                android:textStyle="bold"
                android:text="萨福萨福"
                tools:ignore="MissingPrefix" />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    fontPath="fonts/SourceHanSansCN-Regular.ttf"
                    android:lineSpacingMultiplier="0.9"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="噶大师的撒的"
                    android:layout_gravity="center"
                    android:textColor="#999999"
                    android:textSize="10sp"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:layout_width="41dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/attention"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_circle_intraduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="123gggggg"
        android:textStyle="bold"
        fontPath="fonts/SourceHanSansCN-Normal.ttf"
        android:layout_below="@+id/ly_my_top"
        tools:ignore="MissingPrefix" />

    <com.github.customview.FlowLayout

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/ly_my_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_my_img"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/people" />

        <RelativeLayout
            android:id="@+id/ll_my_info"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="7dp">

            <TextView
                android:id="@+id/tv_my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#1B130F"
                android:textSize="14sp"
                android:lineSpacingMultiplier="0.9"
                android:includeFontPadding="false"
                fontPath="fonts/SourceHanSansCN-Normal.ttf"
                android:textStyle="bold"
                android:text="萨福萨福"
                tools:ignore="MissingPrefix" />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    fontPath="fonts/SourceHanSansCN-Regular.ttf"
                    android:lineSpacingMultiplier="0.9"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="噶大师的撒的"
                    android:layout_gravity="center"
                    android:textColor="#999999"
                    android:textSize="10sp"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:layout_width="41dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/attention"
            />
    </LinearLayout>
    <TextView
        fontPath="fonts/SourceHanSansCN-Medium.ttf"
        android:id="@+id/tv_circle_intraduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="按法律上飞机阿里上飞机哦啊是假发片加发哦是；激发；搜房酱啊房间按房间爱上就发觉是发放 "
        android:layout_below="@+id/ly_my_top"
        tools:ignore="MissingPrefix" />


    <com.petzmall.training.view.MultiImageView
        android:id="@+id/multiImagView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_circle_intraduce"
        android:layout_marginTop="5dp" >
    </com.petzmall.training.view.MultiImageView>

    <View
        android:id="@+id/v_bottom_line"
        android:layout_height="1dp"
        android:layout_below="@+id/multiImagView"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:background="@color/c_divider"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/v_bottom_line"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:id="@+id/ll_my_account"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/share"
                android:layout_marginRight="6dp"
                />
            <TextView
                android:id="@+id/iv_my_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300.00"
                android:lineSpacingMultiplier="0.9"
                android:includeFontPadding="false"
                fontPath="fonts/SourceHanSansCN-Medium.ttf"
                android:gravity="center_vertical"
                android:textColor="@color/circle_bottom_color"
                android:textSize="13sp"
                tools:ignore="MissingPrefix" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_my_vouchers"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/message"
                android:layout_marginRight="6dp"
                />
            <TextView
                android:id="@+id/iv_my_vouchers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                fontPath="fonts/SourceHanSansCN-Medium.ttf"
                android:gravity="center"
                android:lineSpacingMultiplier="0.9"
                android:includeFontPadding="false"
                android:textColor="@color/circle_bottom_color"
                android:textSize="13sp"
                tools:ignore="MissingPrefix" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_my_yangshengdou"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/praise"
                android:layout_marginRight="6dp"
                />
            <TextView
                android:id="@+id/iv_my_ysd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300"
                android:lineSpacingMultiplier="0.9"
                android:includeFontPadding="false"
                fontPath="fonts/SourceHanSansCN-Medium.ttf"
                android:gravity="center"
                android:textColor="@color/circle_bottom_color"
                android:textSize="13sp"
                tools:ignore="MissingPrefix" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
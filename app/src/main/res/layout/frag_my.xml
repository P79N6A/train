<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    >

    <include layout="@layout/app_title"/>
    <com.petzmall.training.view.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="#ffeeeeee"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">
                    <LinearLayout
                        android:id="@+id/ly_my_top"
                        android:layout_width="match_parent"
                        android:layout_height="67dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="15dp"
                        >

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civ_my_img"
                            android:layout_width="67dp"
                            android:layout_height="67dp"
                            android:src="@drawable/people" />

                        <RelativeLayout
                            android:id="@+id/ll_my_info"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="12dp">

                            <TextView
                                android:id="@+id/tv_my_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textColor="#1B130F"
                                android:textSize="15sp"
                                android:lineSpacingMultiplier="0.9"
                                android:includeFontPadding="false"
                                fontPath="fonts/SourceHanSansCN-Normal.ttf"
                                android:textStyle="bold"
                                android:text="萨福萨福"
                                tools:ignore="MissingPrefix" />
                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_below="@+id/tv_my_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/iv_certification"
                                    android:layout_below="@+id/tv_my_name"
                                    android:layout_width="35dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="6dp"
                                    android:src="@drawable/certification"
                                    />
                                <TextView
                                    fontPath="fonts/SourceHanSansCN-Regular.ttf"
                                    android:lineSpacingMultiplier="0.9"
                                    android:includeFontPadding="false"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="噶大师的撒的"
                                    android:layout_gravity="center"
                                    android:textColor="#999999"
                                    android:textSize="10sp"
                                    tools:ignore="MissingPrefix" />
                            </LinearLayout>
                        </RelativeLayout>
                        <ImageView
                            android:padding="5dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/arrow_right"
                            />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:id="@+id/v_bottom_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="@color/c_divider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="58dp">

                    <LinearLayout
                        android:id="@+id/ll_left"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@+id/ll_center"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            >
                            <TextView
                                android:id="@+id/attention"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="@color/my_text_color"
                                android:text="关注"
                                android:includeFontPadding="false"
                                android:lineSpacingMultiplier="0.9"
                                fontPath="fonts/SourceHanSansCN-Medium.ttf"
                                tools:ignore="MissingPrefix" />
                            <View
                                android:id="@+id/vRead"
                                android:visibility="visible"
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:layout_toRightOf="@id/attention"
                                android:background="@drawable/red_tips"
                                />
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:textColor="@color/my_text_color_black"
                            android:text="12345"
                            android:includeFontPadding="false"
                            android:lineSpacingMultiplier="0.9"
                            fontPath="fonts/SourceHanSansCN-Medium.ttf"
                            tools:ignore="MissingPrefix" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_center"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_gravity="center"
                            >
                            <TextView
                                android:id="@+id/fans"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="@color/my_text_color"
                                android:text="粉丝"
                                android:includeFontPadding="false"
                                android:lineSpacingMultiplier="0.9"
                                fontPath="fonts/SourceHanSansCN-Medium.ttf"
                                tools:ignore="MissingPrefix" />
                            <View
                                android:id="@+id/v_fans"
                                android:visibility="visible"
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:layout_toRightOf="@id/fans"
                                android:background="@drawable/red_tips"
                                />
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:textColor="@color/my_text_color_black"
                            android:text="12345"
                            android:includeFontPadding="false"
                            android:lineSpacingMultiplier="0.9"
                            fontPath="fonts/SourceHanSansCN-Medium.ttf"
                            tools:ignore="MissingPrefix" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_right"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/ll_center"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_gravity="center"
                            >
                            <TextView
                                android:id="@+id/collect"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="@color/my_text_color"
                                android:text="收藏"
                                android:includeFontPadding="false"
                                android:lineSpacingMultiplier="0.9"
                                fontPath="fonts/SourceHanSansCN-Medium.ttf"
                                tools:ignore="MissingPrefix" />
                            <View
                                android:id="@+id/v_collect"
                                android:visibility="visible"
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:layout_toRightOf="@id/collect"
                                android:background="@drawable/red_tips"
                                />
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:textColor="@color/my_text_color_black"
                            android:text="12345"
                            android:includeFontPadding="false"
                            android:lineSpacingMultiplier="0.9"
                            fontPath="fonts/SourceHanSansCN-Medium.ttf"
                            tools:ignore="MissingPrefix" />

                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/c_divider" />
                <com.github.customview.MyRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="9dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginLeft="13dp"
                    app:my_rl_corner_radius="12dp"
                    app:my_rl_solid="@color/white"
                    android:layout_height="75dp">

                    <LinearLayout
                        android:id="@+id/lll_left"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@+id/lll_center"
                        >

                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="@color/my_text_color"
                            android:text="余额"
                            android:includeFontPadding="false"
                            android:lineSpacingMultiplier="0.9"
                            fontPath="fonts/SourceHanSansCN-Medium.ttf"
                            tools:ignore="MissingPrefix" />
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:background="@drawable/money"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:textColor="@color/my_text_color_black"
                            android:text="12345"
                            android:includeFontPadding="false"
                            android:lineSpacingMultiplier="0.9"
                            fontPath="fonts/SourceHanSansCN-Medium.ttf"
                            tools:ignore="MissingPrefix" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lll_center"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        >

                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="@color/my_text_color"
                                android:text="粉丝"
                                android:includeFontPadding="false"
                                android:lineSpacingMultiplier="0.9"
                                fontPath="fonts/SourceHanSansCN-Medium.ttf"
                                tools:ignore="MissingPrefix" />
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:background="@drawable/vouchers"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:textColor="@color/my_text_color_black"
                            android:text="12345"
                            android:includeFontPadding="false"
                            android:lineSpacingMultiplier="0.9"
                            fontPath="fonts/SourceHanSansCN-Medium.ttf"
                            tools:ignore="MissingPrefix" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lll_right"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/lll_center"
                        >

                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="@color/my_text_color"
                                android:text="粉丝"
                                android:includeFontPadding="false"
                                android:lineSpacingMultiplier="0.9"
                                fontPath="fonts/SourceHanSansCN-Medium.ttf"
                                tools:ignore="MissingPrefix" />
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:background="@drawable/record"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:textColor="@color/my_text_color_black"
                            android:text="12345"
                            android:includeFontPadding="false"
                            android:lineSpacingMultiplier="0.9"
                            fontPath="fonts/SourceHanSansCN-Medium.ttf"
                            tools:ignore="MissingPrefix" />

                    </LinearLayout>
                </com.github.customview.MyRelativeLayout>

                <com.github.customview.MyLinearLayout
                    android:id="@+id/ly_shop_information"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:my_ll_bottom_line="true"
                    app:my_ll_corner_topLeftRadius="12dp"
                    app:my_ll_corner_topRightRadius="12dp"
                    app:my_ll_solid="@color/white">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/my_home" />
                    <TextView
                        fontPath="fonts/SourceHanSansCN-Medium.ttf"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textSize="15sp"
                        android:gravity="center_vertical"
                        android:textColor="#1B130F"
                        android:text="@string/my_line1"
                        tools:ignore="MissingPrefix" />
                    <ImageView
                        android:padding="5dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/arrow_right"
                        />
                </com.github.customview.MyLinearLayout>

                <com.github.customview.MyLinearLayout
                    android:id="@+id/ly_history"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:my_ll_bottom_line="true"
                    app:my_ll_solid="@color/white">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/history" />
                    <com.github.customview.MyTextView
                        fontPath="fonts/SourceHanSansCN-Medium.ttf"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textSize="15sp"
                        android:textColor="#1B130F"
                        android:gravity="center_vertical"
                        android:text="@string/my_line2"
                        />
                    <ImageView
                        android:padding="5dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/arrow_right"
                        />
                </com.github.customview.MyLinearLayout>
                <com.github.customview.MyLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:my_ll_bottom_line="true"
                    app:my_ll_solid="@color/white">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/service" />
                    <com.github.customview.MyTextView
                        fontPath="fonts/SourceHanSansCN-Medium.ttf"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textSize="15sp"
                        android:textColor="#1B130F"
                        android:gravity="center_vertical"
                        android:text="@string/my_line3"
                        />
                    <ImageView
                        android:padding="5dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/arrow_right"
                        />
                </com.github.customview.MyLinearLayout>
                <com.github.customview.MyLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:my_ll_bottom_line="true"
                    app:my_ll_solid="@color/white">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/address" />
                    <com.github.customview.MyTextView
                        fontPath="fonts/SourceHanSansCN-Medium.ttf"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textSize="15sp"
                        android:textColor="#1B130F"
                        android:gravity="center_vertical"
                        android:text="@string/my_line4"
                        />
                    <ImageView
                        android:padding="5dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/arrow_right"
                        />
                </com.github.customview.MyLinearLayout>
                <com.github.customview.MyLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:my_ll_bottom_line="true"
                    app:my_ll_solid="@color/white">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/friend" />
                    <com.github.customview.MyTextView
                        fontPath="fonts/SourceHanSansCN-Medium.ttf"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textSize="15sp"
                        android:textColor="#1B130F"
                        android:gravity="center_vertical"
                        android:text="@string/my_line5"
                        />
                    <ImageView
                        android:padding="5dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/arrow_right"
                        />
                </com.github.customview.MyLinearLayout>
                <com.github.customview.MyLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:my_ll_bottom_line="true"
                    app:my_ll_solid="@color/white">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/suggest" />
                    <com.github.customview.MyTextView
                        fontPath="fonts/SourceHanSansCN-Medium.ttf"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textSize="15sp"
                        android:textColor="#1B130F"
                        android:gravity="center_vertical"
                        android:text="@string/my_line6"
                        />
                    <ImageView
                        android:padding="5dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/arrow_right"
                        />
                </com.github.customview.MyLinearLayout>
                <com.github.customview.MyLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:my_ll_bottom_line="true"
                    app:my_ll_corner_bottomLeftRadius="12dp"
                    app:my_ll_corner_bottomRightRadius="12dp"
                    android:layout_marginBottom="10dp"
                    app:my_ll_solid="@color/white">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/setting" />
                    <com.github.customview.MyTextView
                        fontPath="fonts/SourceHanSansCN-Medium.ttf"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textSize="15sp"
                        android:textColor="#1B130F"
                        android:gravity="center_vertical"
                        android:text="@string/my_line7"
                        />
                    <ImageView
                        android:padding="5dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/arrow_right"
                        />
                </com.github.customview.MyLinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </com.petzmall.training.view.ProgressLayout>
</LinearLayout>
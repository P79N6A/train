<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="14dp"
    android:layout_marginBottom="16dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/comment_item_logo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="14dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/comment_item_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1B130F"
                android:textSize="14sp"
                android:text="沐风"
                android:includeFontPadding="false"
                fontPath="fonts/SourceHanSansCN-Regular.ttf"
                tools:ignore="MissingPrefix" />
            <TextView
                android:id="@+id/comment_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1小时前"
                android:textSize="12sp"
                android:includeFontPadding="false"
                android:layout_marginTop="3dp"
                android:textColor="#989898"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/detail_page_focus"
            android:layout_width="30dp"
            android:layout_height="11dp"
            android:src="@drawable/attentioned"
            android:layout_marginRight="11dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/comment_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="11dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="12dp"
        android:includeFontPadding="false"
        android:lineSpacingExtra="3dp"
        android:text="从前有座山，山里有座庙，庙里有个老和尚从前有座山，山里有座庙，庙里有个老和尚从前有座山，山里有座庙，庙里有个老和尚"
        fontPath="fonts/SourceHanSansCN-Medium.ttf"
        tools:ignore="MissingPrefix" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@+id/v_bottom_line"
        android:orientation="horizontal"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:id="@+id/ll_my_account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginRight="22dp"
            >
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/praise"
                android:layout_marginRight="6dp"
                />
            <TextView
                android:id="@+id/iv_my_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300.00"
                android:lineSpacingMultiplier="0.9"
                android:includeFontPadding="false"
                fontPath="fonts/SourceHanSansCN-Medium.ttf"
                android:gravity="center_vertical"
                android:textColor="@color/circle_bottom_color"
                android:textSize="13sp"
                tools:ignore="MissingPrefix" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_my_yangshengdou"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/no_praise"
                android:layout_marginRight="6dp"
                />
            <TextView
                android:id="@+id/iv_my_ysd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300"
                android:lineSpacingMultiplier="0.9"
                android:includeFontPadding="false"
                fontPath="fonts/SourceHanSansCN-Medium.ttf"
                android:gravity="center"
                android:textColor="@color/circle_bottom_color"
                android:textSize="13sp"
                tools:ignore="MissingPrefix" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="13dp"
        android:orientation="vertical"
        android:background="#F6F6F6">
        <com.petzm.training.view.CommentListView
            android:id="@+id/commentList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            app:item_color="@color/praise_item"
            />
        <include layout="@layout/item_comment1"
            />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    >

    <include layout="@layout/app_title"/>
    <com.petzmall.training.view.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="#ffeeeeee"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="177dp"
                        android:background="@drawable/integral_background"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ly_my_top"
                            android:layout_width="match_parent"
                            android:layout_height="67dp"
                            android:layout_marginLeft="13dp"
                            android:layout_marginTop="29dp"
                            android:layout_marginRight="13dp"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/civ_my_img"
                                android:layout_width="67dp"
                                android:layout_height="67dp"
                                android:src="@drawable/user_pic" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="9dp"
                                android:src="@drawable/arrow_right"
                                android:text="@string/verification_code"
                                android:textColor="@color/white" />

                            <LinearLayout
                                android:id="@+id/ll_my_info"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:orientation="vertical"
                                android:paddingLeft="12dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_certification"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/tv_my_name"
                                        android:layout_marginRight="6dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/diamond" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/tv_my_name"
                                        android:layout_gravity="center"
                                        android:src="@drawable/total_diamond" />
                                </LinearLayout>

                                <TextView
                                    fontPath="fonts/SourceHanSansCN-Normal.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:lineSpacingMultiplier="0.9"
                                    android:text="2156"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_weight="1"
                                    tools:ignore="MissingPrefix" />

                                <TextView
                                    fontPath="fonts/SourceHanSansCN-Normal.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:lineSpacingMultiplier="0.9"
                                    android:text="以获取2枚勋章 >"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:layout_weight="1"
                                    tools:ignore="MissingPrefix" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                    <com.github.customview.MyLinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="127dp"
                        android:layout_marginBottom="9dp"
                        android:layout_marginRight="13dp"
                        android:layout_marginLeft="13dp"
                        app:my_ll_corner_radius="12dp"
                        app:my_ll_solid="@color/white"
                        android:gravity="center_vertical"
                        android:layout_height="73dp">

                        <LinearLayout
                            android:id="@+id/lll_left"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            >
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginBottom="6dp"
                                android:background="@drawable/money"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:layout_gravity="center"
                                android:textColor="@color/my_text_color_black"
                                android:text="12345"
                                android:includeFontPadding="false"
                                android:lineSpacingMultiplier="0.9"
                                fontPath="fonts/SourceHanSansCN-Medium.ttf"
                                tools:ignore="MissingPrefix" />

                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#D4D4D4"
                            android:layout_marginBottom="13dp"
                            android:layout_marginTop="13dp"
                            />
                        <LinearLayout
                            android:id="@+id/lll_center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            >

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginBottom="6dp"
                                android:background="@drawable/vouchers"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:layout_gravity="center"
                                android:textColor="@color/my_text_color_black"
                                android:text="12345"
                                android:includeFontPadding="false"
                                android:lineSpacingMultiplier="0.9"
                                fontPath="fonts/SourceHanSansCN-Medium.ttf"
                                tools:ignore="MissingPrefix" />

                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#D4D4D4"
                            android:layout_marginBottom="13dp"
                            android:layout_marginTop="13dp"
                            />
                        <LinearLayout
                            android:id="@+id/lll_right"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/iv_task"
                                    android:layout_gravity="center"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_marginBottom="6dp"
                                    android:background="@drawable/record"/>
                                <View
                                    android:visibility="visible"
                                    android:layout_width="6dp"
                                    android:layout_height="6dp"
                                    android:layout_toRightOf="@id/iv_task"
                                    android:background="@drawable/red_tips"
                                    />
                            </RelativeLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:layout_gravity="center"
                                android:textColor="@color/my_text_color_black"
                                android:text="12345"
                                android:includeFontPadding="false"
                                android:lineSpacingMultiplier="0.9"
                                fontPath="fonts/SourceHanSansCN-Medium.ttf"
                                tools:ignore="MissingPrefix" />

                        </LinearLayout>
                    </com.github.customview.MyLinearLayout>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="13dp"
                    android:layout_marginBottom="6dp"
                    android:layout_height="wrap_content">
                    <com.github.customview.MyTextView
                        fontPath="fonts/SourceHanSansCN-Medium.ttf"
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#1B130F"
                        android:text="热门抽奖"
                        android:gravity="center_vertical"
                        />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerview_lucky_draw"
                        android:layout_width="match_parent"
                        android:layout_height="77dp">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>


                <com.github.customview.MyRelativeLayout
                    android:id="@+id/ly_shop_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:my_ll_bottom_line="true"
                    android:paddingLeft="14dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="14dp"
                    app:my_rl_solid="@color/white">

                    <com.github.customview.MyTextView
                        fontPath="fonts/SourceHanSansCN-Medium.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#1B130F"
                        android:text="每日任务"
                        android:includeFontPadding="false"
                        android:layout_centerVertical="true"
                        />
                    <com.github.customview.MyTextView
                        fontPath="fonts/SourceHanSansCN-Medium.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textColor="#1B130F"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="明日签到可获得14积分"
                        android:gravity="center_vertical"
                        />
                </com.github.customview.MyRelativeLayout>

                <com.github.customview.MyLinearLayout
                    android:id="@+id/ly_history"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:my_ll_solid="@color/white">
                    <com.petzmall.training.view.GoodProgressView
                        android:id="@+id/good_progress_view1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </com.github.customview.MyLinearLayout>
                <com.github.customview.MyLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:my_ll_bottom_line="true"
                    app:my_ll_solid="@color/white">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/service" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">
                        <com.github.customview.MyTextView
                            fontPath="fonts/SourceHanSansCN-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:textColor="#1B130F"
                            android:gravity="center_vertical"
                            android:text="@string/online_video_15"
                            android:layout_marginBottom="4dp"
                            android:includeFontPadding="false"
                            />
                        <com.github.customview.MyTextView
                            fontPath="fonts/SourceHanSansCN-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="8sp"
                            android:textColor="@color/my_text_color"
                            android:gravity="center_vertical"
                            android:text="完成2/3"
                            android:includeFontPadding="false"
                            />
                    </LinearLayout>
                    <ImageView
                        android:padding="5dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/arrow_right"
                        />
                </com.github.customview.MyLinearLayout>
                <com.github.customview.MyLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:my_ll_bottom_line="true"
                    app:my_ll_solid="@color/white">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/service" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">
                        <com.github.customview.MyTextView
                            fontPath="fonts/SourceHanSansCN-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:textColor="#1B130F"
                            android:gravity="center_vertical"
                            android:text="@string/video_review"
                            android:layout_marginBottom="4dp"
                            android:includeFontPadding="false"
                            />
                        <com.github.customview.MyTextView
                            fontPath="fonts/SourceHanSansCN-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="8sp"
                            android:textColor="@color/my_text_color"
                            android:gravity="center_vertical"
                            android:text="完成2/3"
                            android:includeFontPadding="false"
                            />
                    </LinearLayout>
                    <ImageView
                        android:padding="5dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/arrow_right"
                        />
                </com.github.customview.MyLinearLayout>
                <com.github.customview.MyLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:my_ll_bottom_line="true"
                    app:my_ll_solid="@color/white">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/service" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">
                        <com.github.customview.MyTextView
                            fontPath="fonts/SourceHanSansCN-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:textColor="#1B130F"
                            android:gravity="center_vertical"
                            android:text="@string/video_score"
                            android:layout_marginBottom="4dp"
                            android:includeFontPadding="false"
                            />
                        <com.github.customview.MyTextView
                            fontPath="fonts/SourceHanSansCN-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="8sp"
                            android:textColor="@color/my_text_color"
                            android:gravity="center_vertical"
                            android:text="完成2/3"
                            android:includeFontPadding="false"
                            />
                    </LinearLayout>
                    <ImageView
                        android:padding="5dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/arrow_right"
                        />
                </com.github.customview.MyLinearLayout>
                <com.github.customview.MyLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:my_ll_bottom_line="true"
                    app:my_ll_solid="@color/white">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/service" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">
                        <com.github.customview.MyTextView
                            fontPath="fonts/SourceHanSansCN-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:textColor="#1B130F"
                            android:gravity="center_vertical"
                            android:text="@string/video_share"
                            android:layout_marginBottom="4dp"
                            android:includeFontPadding="false"
                            />
                        <com.github.customview.MyTextView
                            fontPath="fonts/SourceHanSansCN-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="8sp"
                            android:textColor="@color/my_text_color"
                            android:gravity="center_vertical"
                            android:text="完成2/3"
                            android:includeFontPadding="false"
                            />
                    </LinearLayout>
                    <ImageView
                        android:padding="5dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/arrow_right"
                        />
                </com.github.customview.MyLinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="13dp"
                    android:layout_marginBottom="6dp"
                    android:layout_height="wrap_content">
                    <com.github.customview.MyTextView
                        fontPath="fonts/SourceHanSansCN-Medium.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#1B130F"
                        android:text="热门兑奖"
                        android:gravity="center_vertical"
                        />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerview_exchange"
                        android:layout_width="match_parent"
                        android:layout_height="77dp"

                        >

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </com.petzmall.training.view.ProgressLayout>
</LinearLayout>